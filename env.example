# API Configuration
# RapidAPI Key for external APIs (Skip Trace, Zillow, etc.)
NEXT_PUBLIC_RAPIDAPI_KEY=your_rapidapi_key_here

# Development Settings
# Set to 'true' to use mock data instead of real APIs
NEXT_PUBLIC_USE_MOCK_DATA=true

# Mapbox Configuration
# Get your token from: https://account.mapbox.com/access-tokens/
# IMPORTANT: Replace 'your_mapbox_token_here' with your actual Mapbox access token
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Mapbox Tile Preloading (OPTIONAL - DISABLED BY DEFAULT)
# Set to 'true' to enable aggressive tile preloading (WARNING: Increases API costs significantly)
# Default: false (tiles load on-demand, more cost-effective)
NEXT_PUBLIC_ENABLE_TILE_PRELOAD=false

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Email Configuration (OTP emails via Supabase Edge Function)
# Note: RESEND_API_KEY is set in Supabase Edge Function secrets, not here
# To set Supabase edge function secrets:
#   Local: supabase secrets set RESEND_API_KEY=your_resend_api_key_here
#   Production: Use Supabase Dashboard > Project Settings > Edge Functions > Secrets
# Optional: HOOK_SECRET for securing the auth hook (recommended for production)
#   supabase secrets set HOOK_SECRET=your_hook_secret_here

# Shopify Configuration
# Your Shopify store URL (e.g., shop.mnuda.com or your-store.myshopify.com)
SHOPIFY_STORE_URL=shop.mnuda.com
# Optional: Shopify Storefront API access token for enhanced product data
# Get this from: Shopify Admin > Apps > Develop apps > Create an app > Configure Storefront API scopes
# If not provided, the API will attempt to fetch from the public products.json endpoint
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_shopify_storefront_access_token_here
